<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".New_Address">


    <TextView
        android:id="@+id/tv_CreateAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:elevation="8dp"
        android:fontFamily="@font/spoof_bold"
        android:text="New Address"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />






    <ImageView
        android:id="@+id/back_to_address"
        android:layout_width="41dp"
        android:layout_height="43dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.037"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.014"
        app:srcCompat="@drawable/back"
        android:elevation="8dp"
        tools:ignore="ContentDescription" />



    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/materialDivider_account"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        app:dividerColor="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_CreateAddress" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="100dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="70dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/spoof_bold"
                android:text="House Number"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_PhoneNumber_CreateAddress" />


            <EditText
                android:id="@+id/et_house_number"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/border"
                android:fontFamily="@font/spoof_regular"
                android:ems="10"
                android:hint="0201"
                android:inputType="number"
                android:paddingLeft="15dp"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_" />

            <TextView
                android:id="@+id/tv_Municipality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Municipality"
                android:fontFamily="@font/spoof_bold"
                android:textColor="@color/black"
                android:layout_marginStart="16dp"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editText" />
            <EditText
                android:id="@+id/et_Province"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/border"
                android:ems="10"
                android:hint="Bugallon"
                android:inputType="text"
                android:fontFamily="@font/spoof_regular"
                android:paddingLeft="15dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_Province"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Province"
                android:fontFamily="@font/spoof_bold"
                android:textColor="@color/black"
                android:layout_marginStart="16dp"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editText" />
            <EditText
                android:id="@+id/et_Postal_Code"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/border"
                android:ems="10"
                android:hint="Pangasinan"
                android:fontFamily="@font/spoof_regular"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_PostalCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Postal Code"
                android:layout_marginStart="16dp"
                android:textSize="20sp"
                android:fontFamily="@font/spoof_bold"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editText" />
            <EditText
                android:id="@+id/et_PostalCode"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/border"
                android:ems="10"
                android:hint="2416"
                android:fontFamily="@font/spoof_regular"
                android:inputType="number"
                android:paddingLeft="15dp"
                android:textSize="18sp" />


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/create_address_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custombutton"
        android:text="Create"
        android:fontFamily="@font/spoof_bold"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>